<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
            android:id="@+id/click1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="点击产生crash"
            android:textSize="20sp"
            android:textColor="#000000"/>
        <Button
            android:id="@+id/click2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="点击产生crash2"
            android:textSize="20sp"
            android:textColor="#000000"/>
        <Button
            android:id="@+id/click3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="点击产生crash3"
            android:textSize="20sp"
            android:textColor="#000000"/>
        <Button
            android:id="@+id/click4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="点击产生crash4"
            android:textSize="20sp"
            android:textColor="#000000"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/click5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="启动nxMediaUI不带参数"
            android:textSize="20sp"
            android:textColor="#000000"/>

        <Button
            android:id="@+id/click6"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="启动nxMediaUI带参数Front"
            android:textSize="20sp"
            android:textColor="#000000"/>
        <Button
            android:id="@+id/click7"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="启动nxMediaUI带参数Back"
            android:textSize="20sp"
            android:textColor="#000000"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/click8"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="启动nxMediaUI带参数LOCK"
            android:textSize="20sp"
            android:textColor="#000000"/>
        <Button
            android:id="@+id/click9"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="启动nxMediaUI带参数PHOTO"
            android:textSize="20sp"
            android:textColor="#000000"/>
        <Button
            android:id="@+id/click11"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="启动nxMediaUI带参数Close"
            android:textSize="20sp"
            android:textColor="#000000"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/click10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发送升级mcu命令"
            android:textSize="20sp"
            android:textColor="#000000"/>
        <Button
            android:id="@+id/click12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="启动sim卡切换"
            android:textSize="20sp"
            android:textColor="#000000"/>

        <Button
            android:id="@+id/click13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="打开页面"
            android:textSize="20sp"
            android:textColor="#000000"/>
    </LinearLayout>
    </LinearLayout>
</ScrollView>